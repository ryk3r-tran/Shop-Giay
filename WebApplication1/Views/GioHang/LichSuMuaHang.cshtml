@using KarmaModels.KarmaModels
@model List<WebApplication1.Models.DonMua>
@using System.Globalization;
@{
    ViewBag.Title = "LichSuMuaHang";
    Layout = "~/Views/Layout/MyLayout.cshtml";


}

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Lịch sử mua hàng</h1>
                <nav class="d-flex align-items-center">
                    <a href="index.html">Trang chủ<span class="lnr lnr-arrow-right"></span></a>
                    <a href="category.html">Lịch sử mua hàng</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<!--================Cart Area =================-->
<section class="cart_area">
    <div class="container">
        <div class="cart_inner">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Mã đơn hàng</th>
                            <th scope="col">Sản phẩm</th>
                            <th scope="col">Màu</th>
                            <th scope="col">Size</th>
                            <th scope="col">Giá</th>
                            <th scope="col">Số lượng</th>
                            <th scope="col">Tổng</th>
                            <th scope="col">Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var tich = item.DonGia * item.SoLuong;
                            if (item.TinhTrang == "Hủy" || item.TinhTrang == "Giao hàng thành công")
                            {
                                <tr>
                                    <td>
                                        <h5>@item.MaDH</h5>
                                    </td>
                                    <td>
                                        <div class="media">
                                            <div class="d-flex">
                                                <img src="@item.AnhChinh" alt="" style="height:50px;width:50px">
                                            </div>
                                            <div class="media-body">
                                                <p>@item.TenSP</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <h5>@item.Color</h5>
                                    </td>
                                    <td>
                                        <h5>@item.Size</h5>
                                    </td>
                                    <td>
                                        <h5>
                                            @{
                                                CultureInfo cul1 = CultureInfo.GetCultureInfo("vi-VN");
                                                string dg = item.DonGia.ToString("#,###", cul1.NumberFormat);
                                            }

                                            @dg
                                        </h5>
                                    </td>
                                    <td>
                                        <h5>@item.SoLuong</h5>
                                    </td>
                                    <td>
                                        <h5>
                                            @{
                                                CultureInfo cul2 = CultureInfo.GetCultureInfo("vi-VN");
                                                string tongtien = tich.ToString("#,###", cul2.NumberFormat);

                                            }
                                            @tongtien

                                        </h5>
                                    </td>
                                    <td>
                                        <h5>@item.TinhTrang</h5>
                                    </td>

                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
<!--================End Cart Area =================-->
