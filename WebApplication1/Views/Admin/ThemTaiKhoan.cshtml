
@{
    ViewBag.Title = "ThemTaiKhoan";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<head>
    <title>Thêm tài khoản - Admin</title>
</head>

<style>
    th, tr, td {
        border: 1px double black;
    }

    .tableQLtk {
        border: 2px double black;
        width: 75%;
    }
</style>

<main id="main" class="main">

    <div class="card-body">
        <h5 class="card-title">Thêm tài khoản</h5>

        <!-- Horizontal Form -->
        <form action="ThemTK" method="post">
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">UserName</label>
                <div class="col-sm-10">
                    <input name="username" type="text" class="form-control" id="inputText">
                </div>
            </div>
            
            <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input name="pass" type="password" class="form-control" id="inputPassword">
                </div>
            </div>
            <fieldset class="row mb-3">
                <legend class="col-form-label col-sm-2 pt-0">Quyền</legend>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Quyen" id="gridRadios1" value="option1" checked>
                        <label class="form-check-label" for="gridRadios1">
                            Quản lý
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Quyen" id="gridRadios2" value="option2">
                        <label class="form-check-label" for="gridRadios2">
                            Nhân viên
                        </label>
                    </div>
                    <div class="form-check disabled">
                        <input class="form-check-input" type="radio" name="Quyen" id="gridRadios3" value="option3" >
                        <label class="form-check-label" for="gridRadios3">
                            Khách hàng
                        </label>
                    </div>
                </div>
            </fieldset>
            
            <h5 class="card-title">Thông tin khách hàng</h5>

            <!-- Horizontal Form -->
            
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Họ và Tên</label>
                <div class="col-sm-10">
                    <input name="TenKH" type="text" class="form-control" id="inputText">
                </div>
            </div>
            <fieldset class="row mb-3">
                <legend class="col-form-label col-sm-2 pt-0">Giới Tính</legend>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gioiTinh" id="gridRadios1" value="option1" checked>
                        <label class="form-check-label" for="gridRadios1">
                            Nam
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gioiTinh" id="gridRadios2" value="option2">
                        <label class="form-check-label" for="gridRadios2">
                            Nữ
                        </label>
                    </div>
                        
                </div>
            </fieldset>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input name="Email" type="Email" class="form-control" id="inputEmail">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Địa chỉ</label>
                <div class="col-sm-10">
                    <input name="DiaChi" type="text" class="form-control" id="inputPassword">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-2 col-form-label">SĐT</label>
                <div class="col-sm-10">
                    <input name="Sdt" type="text" class="form-control" id="inputPassword">
                </div>
            </div>
                
            <div class="row mb-3">
                <div class="col-sm-10 offset-sm-2">
                    <div class="form-check">
                        <input  name="check_DK" class="form-check-input" type="checkbox" id="gridCheck1">
                        <label class="form-check-label" for="gridCheck1">
                            Tôi đồng ý với điều khoản
                        </label>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Thêm</button>
                <button type="reset" class="btn btn-secondary">Làm mới</button>
                <button type="reset" class="btn btn-secondary">Thông tin chi tiết</button>
            </div>
            </form><!-- End Horizontal Form -->

    </div>



</main><!-- End #main -->
